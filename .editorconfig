# https://editorconfig.org/

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[{CMakeLists.*, *.cmake}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.{sh, sh.*}]
indent_style = space
indent_size = 2

[*.{md, markdown}]
indent_style = space
indent_size = 2
